<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming courses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main1_btn1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Adaugare curs" />

    <Button
        android:id="@+id/main1_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="afisare cursuri" />

    <Button
        android:id="@+id/main1_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="afisare cursuri din sharedpref" />

</LinearLayout>